        .modal_popup.upgrade_cart .subscribe_option{
           width: 100%;
           max-width: 320px;
           margin:0 auto;
        }
        .modal_popup.upgrade_cart .inner_container_box ul{
            padding: 0 25px;
        }
        .modal_popup.upgrade_cart .inner_container_box{
            width: calc(100% - 40px);
            padding: 32px 20px;
