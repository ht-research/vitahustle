
{%- liquid
    assign options = section.settings
    assign new_all_in_one_title = options.new_all_in_one_title
    assign new_all_in_one_subtitle = options.new_all_in_one_subtitle
    assign background_desktop_image = options.background_desktop_image
    assign background_mobile_image = options.background_mobile_image
    assign background_ipad_image = options.background_ipad_image
    assign btn_text = options.btn_text
    assign btn_url = options.btn_url
    assign blocks = section.blocks

  -%}

<style>
    .new_all_in_one{
        width: 100%;
        height: 41.64vw;
        display: block;
        background-image: url("{{ background_desktop_image | img_url: '1440x' }}");
        background-repeat: no-repeat;
        background-size: cover;
    }
    .new_all_in_one .inner_new_all_in_one{
        padding: 40px 40px 20px 40px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: baseline;
        height: unset;
    }
    .new_all_in_one .inner_new_all_in_one .top_content{
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 30.2206vw;
    }
    .new_all_in_one .inner_new_all_in_one .top_content p{
        font-family: "Druk Web";
        font-size: 7.634vw;
        font-weight: 700;
        line-height: 9.1608vw;
        letter-spacing: 1px;
        color: #FFFFFF;
    }
    .new_all_in_one .inner_new_all_in_one .top_content p span{
        color: #C8E812;
    }
    .new_all_in_one .inner_new_all_in_one .top_content .subtitle{
        font-family: 'Lato Bold', sans-serif;
        font-size: 1.388vw;
        font-weight: 700;
        line-height: 1.665vw;
        color: #FFFFFF;
        margin: 0px 0px 16px 0px;
    }
    .new_all_in_one .inner_new_all_in_one .top_content a{
        background-color: #C8E812;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 261px;
        height: 55px;
        font-family: 'Lato Bold', sans-serif;
        font-size: 1.388vw;
        font-weight: 900;
        line-height: 1.665vw;
        text-decoration: none;
        border-radius: 30px;
    
    }
    .new_all_in_one .inner_new_all_in_one .bottom_content{
        display: flex;
        flex-direction: column;
    }
    .new_all_in_one .inner_new_all_in_one .bottom_content .feature_icon_wrapper{
        display: flex;
        flex-direction: row;
        column-gap: 20px;
    }
    .new_all_in_one .inner_new_all_in_one .bottom_content .feature_icon_wrapper .feature_icon{
        width: 76px;
        height: 76px;
        display: block;
    }
    .new_all_in_one .inner_new_all_in_one .bottom_content .feature_icon_wrapper .feature_icon img{
        width: 100%;
        height: 100%;
        object-fit: contain;
        object-position: center;
        display: block;
    }
    .new_all_in_one .inner_new_all_in_one .bottom_content .shop_btn{
        display: none;
    }
    .new_all_in_one .inner_new_all_in_one .bottom_content .shop_btn a{
        background-color: #C8E812;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 261px;
        height: 55px;
        font-family: 'Lato Bold', sans-serif;
        font-size: 1.388vw;
        font-weight: 900;
        line-height: 1.665vw;
        text-decoration: none;
        border-radius: 30px;
    }
    @media screen and (min-width: 1600px){
        .new_all_in_one .inner_new_all_in_one .top_content a{
            width: 18.1134vw;
            height: 3.817vw;
            border-radius: 5.13vw;
        }
    }
    @media screen and (max-width: 820px){
        .new_all_in_one{
            height: 129.41vw;
            max-height: 830px;
            display: block;
            background-image: url("{{ background_ipad_image | img_url: '820x' }}");
            background-size: contain;
            background-position: center;
        }
        .new_all_in_one .inner_new_all_in_one{
            flex-direction: column;
            align-items: center;
            padding: 30px 40px 40px 40px;
            height: 100%;
        }
        .new_all_in_one .inner_new_all_in_one .top_content{
            width: 45.2206vw;
        }
        .new_all_in_one .inner_new_all_in_one .top_content p{
            font-family: "Druk Web";
            font-size: 112px;
            font-weight: 900;
            line-height: 104px;
            letter-spacing: 1px;
            color: #FFFFFF;        
        }
        .new_all_in_one .inner_new_all_in_one .top_content .subtitle{
            font-family: 'Lato Bold', sans-serif;
            font-size: 20px;
            font-weight: 500;
            text-align: center;
            line-height: 24.6px;
        }
        .new_all_in_one .inner_new_all_in_one .top_content a{
            font-size: 16px;
            line-height: 20px;
            width: 210px;

        }
        .new_all_in_one .inner_new_all_in_one .bottom_content .feature_icon_wrapper .feature_icon{
            width: 46px;
            height: 46px;
            display: block;
        }
        .new_all_in_one .inner_new_all_in_one .top_content .subtitle{
            margin: 10px 0px 15px 0px;
        }
        .new_all_in_one .inner_new_all_in_one .top_content a{
            display: none;
        }
        .new_all_in_one .inner_new_all_in_one .bottom_content .shop_btn{
            margin-top: 20px;
            display: block;
        }
        .new_all_in_one .inner_new_all_in_one .bottom_content{
            align-items: center;
        }
    }
    @media screen and (max-width: 768px) {
        .new_all_in_one{
            height: 129.41vw;
            max-height: 780px;
            display: block;
            background-image: url("{{ background_ipad_image | img_url: '820x' }}");
            background-size: contain;
            background-position: center;
        }
        .new_all_in_one .inner_new_all_in_one .top_content{
            width: unset;
        }
        .new_all_in_one .inner_new_all_in_one .top_content p{
            font-family: "Druk Web";
            font-size: 112px;
            font-weight: 900;
            line-height: 104px;
            letter-spacing: 1px;
            color: #FFFFFF;        
        }
        .new_all_in_one .inner_new_all_in_one .top_content .subtitle{
            font-family: 'Lato Bold', sans-serif;
            font-size: 20px;
            font-weight: 500;
            text-align: center;
            line-height: 24.6px;
        }
        .new_all_in_one .inner_new_all_in_one .top_content a{
            display: none;
        }
        .new_all_in_one .inner_new_all_in_one .bottom_content .feature_icon_wrapper .feature_icon{
            width: 69px;
            height: 73px;
        }
        .new_all_in_one .inner_new_all_in_one .bottom_content{
            align-items: center;
        }
        .new_all_in_one .inner_new_all_in_one .bottom_content .shop_btn{
            margin-top: 20px;
            display: block;
        }
        .new_all_in_one .inner_new_all_in_one .bottom_content .shop_btn a{
            font-size: 18px;
            font-weight: 900;
            line-height: 21px;
        }
    }
    @media screen and (max-width: 540px) {
        .new_all_in_one{
            height: 129.41vw;
            min-height: 712px;
            display: block;
            background-image: url("{{ background_mobile_image | img_url: '820x' }}");
            background-size: cover;
        }

        .new_all_in_one .inner_new_all_in_one .top_content p{
            font-family: "Druk Web";
            font-size: 72px;
            font-weight: 900;
            line-height: 66px;
            letter-spacing: 1px;
            color: #FFFFFF;
        }
        .new_all_in_one .inner_new_all_in_one .top_content .subtitle{
            font-family: 'Lato Bold', sans-serif;
            font-size: 15px;
            font-weight: 700;
            text-align: center;
            line-height: 21.6px;
        }
        .new_all_in_one .inner_new_all_in_one .top_content a{
            display: none;
        }
        .new_all_in_one .inner_new_all_in_one {
            flex-direction: column;
            align-items: center;
            padding: 40px 40px 30px 40px;
        }
    }
</style>

<div class="new_all_in_one">
    <div class="inner_new_all_in_one">
        <div class="top_content">
            {% if new_all_in_one_title != blank %}
                <p>{{ new_all_in_one_title }}</p>
            {% endif %}
            {% if new_all_in_one_subtitle != blank %}
                <span class="subtitle">{{ new_all_in_one_subtitle }}</span>
            {% endif %}
            {% if btn_text != blank %}
                <a href="{{ btn_url }}">{{ btn_text }}</a>
            {% endif %}
        </div>
        <div class="bottom_content">
            <div class="feature_icon_wrapper">
                {% for block in blocks %}
                    <div class="feature_icon">
                        <img src="{{ block.settings.icon_image | img_url: 'master' }}">
                    </div>

                {% endfor %}
            </div>
            <div class="shop_btn">
                {% if btn_text != blank %}
                    <a href="{{ btn_url }}">{{ btn_text }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "New All in one",
    "tag": "section",
    "settings": [

        {
            "type": "text",
            "id": "new_all_in_one_title",
            "label": "t:sections.new_all_in_one.new_all_in_one_title"
        },
        {
            "type": "text",
            "id": "new_all_in_one_subtitle",
            "label": "t:sections.new_all_in_one.new_all_in_one_subtitle"
        },
        {
          "type": "image_picker",
          "id": "background_desktop_image",
          "label": "t:sections.new_all_in_one.background_desktop_image"
        },
        {
            "type": "image_picker",
            "id": "background_mobile_image",
            "label": "t:sections.new_all_in_one.background_mobile_image"
        },
        {
            "type": "image_picker",
            "id": "background_ipad_image",
            "label": "t:sections.new_all_in_one.background_ipad_image"
        },
        {
            "type": "text",
            "id":"btn_text",
            "label": "t:sections.new_all_in_one.btn_text"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "t:sections.new_all_in_one.btn_url"
        }
    ],
    "blocks":[

        {
            "type": "rich_text",
            "name": "t:sections.new_all_in_one.blocks.image_text.name",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon_image",
                    "label":"t:sections.new_all_in_one.blocks.image_text.icon_image.label"
                }
    
            ]
        }
    ],
    "presets": [
        {
        "name": "New All In One"
        }
    ]
}
{% endschema %}