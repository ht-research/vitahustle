            "max": 1240,
            "step": 20,
            "default":780
        },
        {
            "type": "image_picker",
            "id": "background_mobile_image",
            "label": "t:sections.new_banner_section.background_mobile_image"
        },
        {
            "type":"range",
            "id":"mobile_banner_min_height",
            "label":"t:sections.new_banner_section.mobile_banner_min_height",
            "min": 0,
            "max": 1240,
            "step": 20,
            "default":700
        },
        {
            "type":"range",
            "id":"mobile_banner_max_height",
            "label":"t:sections.new_banner_section.mobile_banner_max_height",
            "min": 0,
            "max": 1240,
            "step": 20,
            "default":800
        },
        {
            "type": "image_picker",
            "id": "background_ipad_image",
            "label": "t:sections.new_banner_section.background_ipad_image"
        },
        {
            "type":"range",
            "id":"Tablet_banner_max_height",
            "label":"t:sections.new_banner_section.Tablet_banner_max_height",
            "min": 0,
            "max": 1240,
            "step": 20,
            "default":800
        },
        {
            "type": "text",
            "id":"btn_text",
            "label": "t:sections.new_banner_section.btn_text"
        },
        {
            "type": "url",
            "id": "btn_url",
            "label": "t:sections.new_banner_section.btn_url"
        }
    ],
    "presets": [
        {
        "name": "New Banner Section"
        }
    ]
}
