
{%- liquid
    assign options = section.settings
    assign new_banner_section_title = options.new_banner_section_title
    assign new_banner_section_subtitle = options.new_banner_section_subtitle
    assign background_larger_screen_image = options.background_larger_screen_image
    assign background_desktop_image = options.background_desktop_image
    assign background_mobile_image = options.background_mobile_image
    assign background_ipad_image = options.background_ipad_image
    assign desktop_banner_max_height = options.desktop_banner_max_height
    assign mobile_banner_min_height = options.mobile_banner_min_height
    assign mobile_banner_max_height = options.mobile_banner_max_height
    assign Tablet_banner_max_height = options.Tablet_banner_max_height
    assign larger_screen_banner_max_height = options.larger_screen_banner_max_height
    assign btn_text = options.btn_text
    assign btn_url = options.btn_url
    assign blocks = section.blocks

  -%}

<style>
    .new_banner_section{
        width: 100%;
        height: 54.132vw;
        {% if desktop_banner_max_height !=blank %}
            max-height: {{ desktop_banner_max_height }}px;
        {% endif %}
        display: block;
        background-image: url("{{ background_desktop_image | img_url: '1440x' }}");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }
    .new_banner_section .inner_new_banner_section{
        padding: 40px 40px 20px 40px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        position: relative;
    }
    .new_banner_section .inner_new_banner_section .top_content{
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 35.94vw;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 100px;
    }
    .new_banner_section .inner_new_banner_section .top_content p{
        font-family: "Druk Web";
        font-size: 5.4132vw;
        text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.20);
        font-style: normal;
        font-weight: 700;
        line-height: 4.49vw;
        text-transform: uppercase;
        text-align: left;
        color: #ffffff;
        margin-bottom: 30px;
    }
    .new_banner_section .inner_new_banner_section .top_content p span{
        color: #C8E812;
        font-size: 8.8832vw;
        line-height: 9.659vw;
    }
    .new_banner_section .inner_new_banner_section .top_content .subtitle{
        font-family: 'Lato Bold', sans-serif;
        font-size: 1.388vw;
        font-weight: 700;
        line-height: 1.665vw;
        color: #FFFFFF;
        margin: 10px 0px 20px 0px;
    }
    .new_banner_section .inner_new_banner_section .top_content a{
        background-color: #C8E812;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 261px;
        height: 55px;
        font-family: 'Lato Bold', sans-serif;
        font-size: 1.388vw;
        font-weight: 900;
        line-height: 1.665vw;
        text-decoration: none;
        border-radius: 30px;
    
    }
    .new_banner_section .inner_new_banner_section .bottom_content{
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }
    .new_banner_section .inner_new_banner_section .bottom_content .feature_icon_wrapper{
        display: flex;
        flex-direction: row;
        column-gap: 20px;
    }
    .new_banner_section .inner_new_banner_section .bottom_content .feature_icon_wrapper .feature_icon{
        width: 76px;
        height: 76px;
        display: block;
    }
    .new_banner_section .inner_new_banner_section .bottom_content .feature_icon_wrapper .feature_icon img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        display: block;
    }
    .new_banner_section .inner_new_banner_section .bottom_content .shop_btn{
        display: none;
    }
    .new_banner_section .inner_new_banner_section .bottom_content .shop_btn a{
        background-color: #C8E812;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 261px;
        height: 55px;
        font-family: 'Lato Bold', sans-serif;
        font-size: 1.388vw;
        font-weight: 900;
        line-height: 1.665vw;
        text-decoration: none;
        border-radius: 30px;
    }
    .bottom_arrow_icon{
        position: absolute;
        bottom: 1.73vw;
        width: 2.42vw;
        min-width: 34px;
        display: flex;
        justify-content: center;
        align-items: center;
        left: 50%;
        z-index: 3;
        cursor: pointer;
        transform: translateX(-50%);
    }
    .bottom_arrow_icon svg{
        -webkit-filter: drop-shadow( 0px 10px 4px rgba(0, 0, 0, .3));
        filter: drop-shadow( 0px 10px 4px rgba(0, 0, 0, .3));
    }
    @media screen and (min-width: 1600px){
        .new_banner_section{
            {% if larger_screen_banner_max_height !=blank %}
                max-height: {{ larger_screen_banner_max_height }}px;
            {% endif %}
            {% if background_larger_screen_image !=blank %}
                background-image: url("{{ background_larger_screen_image | img_url: '2500x' }}");
            {% endif %}
            
        }
        .new_banner_section .inner_new_banner_section .top_content a{
            background-color: #C8E812;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 18.1134vw;
            height: 3.817vw;
            font-family: 'Lato Bold', sans-serif;
            font-size: 1.388vw;
            font-weight: 900;
            line-height: 1.665vw;
            text-decoration: none;
            border-radius: 5.13vw;
        
        }
    }
    @media screen and (max-width: 820px){
        .new_banner_section{
            height: 129.41vw;
            {% comment %} max-height: 800px; {% endcomment %}
            {% if Tablet_banner_max_height !=blank %}
                max-height: {{ Tablet_banner_max_height }}px;
            {% endif %}
            display: block;
            background-image: url("{{ background_ipad_image | img_url: '820x' }}");
            background-position: center;
        }

        .bottom_arrow_icon{
            display: none;
        }
        .new_banner_section .inner_new_banner_section .top_content{
            width: unset;
            position: unset;
            max-width: unset;
            transform: unset;
        }
        .new_banner_section .inner_new_banner_section .top_content a{
            font-size: 16px;
            line-height: 20px;
            width: 210px;

        }
        .new_banner_section .inner_new_banner_section .bottom_content .feature_icon_wrapper .feature_icon{
            width: 46px;
            height: 46px;
            display: block;
        }
        .new_banner_section .inner_new_banner_section .top_content .subtitle{
            margin: 10px 0px 15px 0px;
        }
        .new_banner_section .inner_new_banner_section .top_content a{
            display: none;
        }
        .new_banner_section .inner_new_banner_section .bottom_content .shop_btn{
            margin-top: 20px;
            display: block;
        }
        .new_banner_section .inner_new_banner_section .bottom_content{
            align-items: center;
        }
        .new_banner_section .inner_new_banner_section .top_content p{
            font-family: "Druk Web";
            color: #FFF;
            text-align: center;
            text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.21);
            font-size: 78px;
            font-style: normal;
            font-weight: 700;
            line-height: 65px;
            text-transform: uppercase;
        }
        .new_banner_section .inner_new_banner_section .top_content p span{
            color: #C8E812;
            font-size: 128px;
            line-height: 120px;
        }
        .new_banner_section .inner_new_banner_section .top_content .subtitle{
            font-family: 'Lato Bold', sans-serif;
            font-size: 15px;
            font-weight: 700;
            text-align: center;
            line-height: 21.6px;
        }
    }
    @media screen and (max-width: 768px) {
        .new_banner_section{
            height: 129.41vw;
            {% comment %} max-height: 800px; {% endcomment %}
            {% if Tablet_banner_max_height !=blank %}
                max-height: {{ Tablet_banner_max_height }}px;
            {% endif %}
            display: block;
            background-image: url("{{ background_ipad_image | img_url: '820x' }}");
            background-position: center;
        }
        .new_banner_section .inner_new_banner_section .top_content{
            width: unset;
            position: unset;
            max-width: unset;
            transform: unset;
        }
        .new_banner_section .inner_new_banner_section .top_content p{
            font-family: "Druk Web";
            color: #FFF;
            text-align: center;
            text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.21);
            font-size: 78px;
            font-style: normal;
            font-weight: 700;
            line-height: 75px;
            text-transform: uppercase;
        }
        .new_banner_section .inner_new_banner_section .top_content p span{
            color: #C8E812;
            font-size: 128px;
            line-height: 120px;
        }
        .new_banner_section .inner_new_banner_section .top_content .subtitle{
            font-family: 'Lato Bold', sans-serif;
            font-size: 15px;
            font-weight: 700;
            text-align: center;
            line-height: 21.6px;
        }
        .new_banner_section .inner_new_banner_section .top_content a{
            display: none;
        }
        .new_banner_section .inner_new_banner_section .bottom_content .feature_icon_wrapper .feature_icon{
            width: 69px;
            height: 73px;
        }
        .new_banner_section .inner_new_banner_section .bottom_content{
            align-items: center;
        }
        .new_banner_section .inner_new_banner_section .bottom_content .shop_btn{
            margin-top: 20px;
            display: block;
        }
        .new_banner_section .inner_new_banner_section .bottom_content .shop_btn a{
            font-size: 18px;
            font-weight: 900;
            line-height: 21px;
        }
    }
    @media screen and (max-width: 540px) {
        .new_banner_section{
            height: 129.41vw;
            {% comment %} min-height: 712px; {% endcomment %}
            {% if mobile_banner_min_height !=blank %}
                min-height: {{ mobile_banner_min_height }}px;
            {% endif %}
            {% if mobile_banner_max_height !=blank %}
                max-height: {{ mobile_banner_max_height }}px;
            {% endif %}
            display: block;
            background-image: url("{{ background_mobile_image | img_url: '820x' }}");
        }
        .new_banner_section .inner_new_banner_section{
            padding: 40px 40px 40px 40px;
        }
        .new_banner_section .inner_new_banner_section .top_content p{
            font-family: "Druk Web";
            color: #FFF;
            text-align: center;
            text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.21);
            font-size: 52px;
            font-style: normal;
            font-weight: 700;
            line-height: 54px;
            text-transform: uppercase;
        }
        .new_banner_section .inner_new_banner_section .top_content p span{
            font-size: 87px;
            line-height: 76px;
        }
        .new_banner_section .inner_new_banner_section .top_content .subtitle{
            font-family: 'Lato Bold', sans-serif;
            font-size: 15px;
            font-weight: 700;
            text-align: center;
            line-height: 21.6px;
        }
        .new_banner_section .inner_new_banner_section .top_content a{
            display: none;
        }
    }
</style>

<div class="new_banner_section">
    <div class="inner_new_banner_section">
        <div class="bottom_arrow_icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="35"
              height="24"
              viewBox="0 0 35 24"
              fill="none">
              <path
                d="M3.5 5L17 18.5L31.5 4"
                stroke="white"
                stroke-width="7"
                stroke-linecap="round" />
            </svg>
          </div>
        <div class="top_content">
            {% if new_banner_section_title != blank %}
                <p>{{ new_banner_section_title }}</p>
            {% endif %}
            {% if new_banner_section_subtitle != blank %}
                <span class="subtitle">{{ new_banner_section_subtitle }}</span>
            {% endif %}
            {% if btn_text != blank %}
                <a href="{{ btn_url }}">{{ btn_text }}</a>
            {% endif %}
        </div>
        <div class="bottom_content">
            {% comment %} <div class="feature_icon_wrapper">
                {% for block in blocks %}
                    <div class="feature_icon">
                        <img src="{{ block.settings.icon_image | img_url: 'master' }}">
                    </div>

                {% endfor %}
            </div> {% endcomment %}
            <div class="shop_btn">
                {% if btn_text != blank %}
                    <a href="{{ btn_url }}">{{ btn_text }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      $('.bottom_arrow_icon').on('click', function() {
        let offset = $('.new_all_in_one').offset().top;
        $('body,html').animate({
          scrollTop: offset - 40
        }, 400);
      })
    })
  </script>

{% schema %}
  {
    "name": "New Banner Section",
    "tag": "section",
    "settings": [

        {
            "type": "text",
            "id": "new_banner_section_title",
            "label": "t:sections.new_banner_section.new_banner_section_title"
        },
        {
            "type": "text",
            "id": "new_banner_section_subtitle",
            "label": "t:sections.new_banner_section.new_banner_section_subtitle"
        },
        {
            "type": "image_picker",
            "id": "background_larger_screen_image",
            "label": "t:sections.new_banner_section.background_larger_screen_image"
