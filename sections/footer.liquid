            {%- if show_language_selector == true -%}
              <div class="localization-dropdown-wrapper">
                <dropdown-opener
                  class="localization-dropdown-toggle"
                  data-aria-expanded="false"
                  data-float-element-id="FooterLanguageSelector"
                  data-trigger="click"
                  tabindex="0"
                >
                  {{ localization.language.name }}
                  {% render 'icon',
                    icon_name: 'chevron',
                    class: 'localization-dropdown-toggle__chevron',
                    stroke_width: 1
                  %}
                </dropdown-opener>
                <float-element
                  class="localization-dropdown  footer__localization-dropdown"
                  aria-hidden="true"
                  id="FooterLanguageSelector"
                  data-placement="top-end"
                  data-main-axis-offset="12"
                  data-strategy="fixed"
                >
                  <template>
                    <div class="localization-dropdown__body">
                      <localization-selector class="footer__selector">
                        {%- form 'localization', id: 'FooterLanguageForm' -%}
                          {%- for language in localization.available_languages -%}
                            <button
                              class="localization-dropdown__item {% if localization.language == language %} selected{% endif %}"
                              data-localization-item
                              data-value="{{ language.iso_code }}"
                              data-focus-trap-target
                              aria-label="{{ language.name }}"
                            >
                              {{ language.name }}
                            </button>
                          {%- endfor -%}
                          <input
                            type="hidden"
                            name="locale_code"
                            data-localization-input
                            value="{{ localization.language.iso_code }}"
                            id="FooterLanguageForm-LocaleCodeInput-{{ form.id }}"
                          >
                        {%- endform -%}
                      </localization-selector>
                    </div>
                  </template>
                </float-element>
              </div>
            {%- endif -%}
