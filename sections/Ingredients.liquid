                {% comment %} <div class="ingredient_icon_text">
                    <div class="ingredient_icon">
                      <img src="https://i.postimg.cc/br5dF7qF/zap.png">  
                    </div>
                    <p class="ingredient_text">Provides Balanced Energy</p>
                </div>
                <div class="ingredient_icon_text">
                    <div class="ingredient_icon">
                      <img src="https://i.postimg.cc/br5dF7qF/zap.png">  
                    </div>
                    <p class="ingredient_text">Provides Balanced Energy</p>
                </div>
                <div class="ingredient_icon_text">
                    <div class="ingredient_icon">
                      <img src="https://i.postimg.cc/br5dF7qF/zap.png">  
                    </div>
                    <p class="ingredient_text">Provides Balanced Energy</p>
                </div>
                <div class="ingredient_icon_text">
                    <div class="ingredient_icon">
                      <img src="https://i.postimg.cc/br5dF7qF/zap.png">  
                    </div>
                    <p class="ingredient_text">Provides Balanced Energy</p>
                </div> {% endcomment %}
            </div>
        </div>
    </div>
{% endif %}

